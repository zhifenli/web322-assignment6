<div class="row" class="table-responsive">
  <div class="col-md-12">

    <h2>Posts
      <button style="float:right">
        <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></button>
    </h2><hr />
    <table class="table">
      <thead>
        <tr>
          <th> Post ID </th>
          <th>Title</th>
          <th>Post Date</th>
          <th>Category</th>
          <th>Published</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{! <p>TODO: render a list of all post title values here</p> }}
        {{#each posts}}
          <tr>
            {{!-- {{#row @index}}{{/row}} --}}
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{postDate}}</td>
            <td>{{categoryTitle}}</td>
            <td>{{published}}</td>
            <td>
              <a href="posts/delete/{{id}}" class="btn btn-danger">Remove</a>
            </td>
          </tr>

        {{/each}}
      </tbody>

    </table>
  </div>
  {{#unless posts}}
    <strong>{{message}}</strong>
  {{/unless}}
</div>